<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="oval" >
        <gradient
            android:angle="90"
            android:startColor="#ffd500"
            android:endColor="#ff367d"
            android:type="linear" />
        <size android:width="24dp"
            android:height="24dp"/>
    </shape>
</item>

<item
    android:bottom="4dp"
    android:left="4dp"
    android:right="4dp"
    android:top="4dp">
    <shape android:shape="oval" >
        <solid android:color="#e6000000" />
    </shape>
</item>

</layer-list>
