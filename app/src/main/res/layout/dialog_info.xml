<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@drawable/card_backgorund"
    android:backgroundTint="@android:color/white"
    android:layout_marginBottom="20dp"
    android:textAlignment="center">


    <ImageButton
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/x_circle"
        android:background="#00000000"
        android:id="@+id/btn_yes"
        android:layout_margin="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Prize Money"
        android:id="@+id/text"
        android:textColor="#0f0520"
        android:textAlignment="center"
        android:fontFamily="@font/circular_medium"
        android:textSize="25sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/circular_book"
        android:textColor="#BF0F0520"
        android:lineSpacingExtra="1.2dp"
        android:layout_below="@id/text"
        android:layout_marginBottom="40dp"
        android:text="The cash prize you earn in a game will be transferred at 12:00 AM on the same day, directly to the Paytm account linked to your registered mobile number."
        android:textAlignment="center"
        android:textSize="18sp" />


</RelativeLayout>