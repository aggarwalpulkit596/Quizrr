<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optconstraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context="quizrr.quizrr.com.learnacad.learnacad.quizrr.SignUpActivites.OtpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/stars" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="276dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/ovalquizin1" />


    <ImageView
        android:layout_width="123dp"
        android:layout_height="186dp"
        android:background="@drawable/ovalquiz12" />

    <ImageView
        android:layout_width="143dp"
        android:layout_height="206dp"
        android:background="@drawable/ovalquiz13" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="191dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz2" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="141dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz22" />


    <ImageView
        android:layout_width="91dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz23" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz31" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalouiz32" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz33" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="#1a0e49" />

    <ImageView
        android:id="@+id/otpbackbtnimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="backbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/otpbackbtnimageview"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/circular_medium"
        android:gravity="center_horizontal"
        android:text="OTP"
        android:textColor="#ffffff"
        android:textSize="24sp" />


    <LinearLayout
        android:id="@+id/otplinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpbackbtnimageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/otpedittext1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_edit"
            android:fontFamily="@font/circular_book"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@id/otplinearlayout"
            android:shadowColor="#000000"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/otpedittext2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_edit"
            android:fontFamily="@font/circular_book"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@id/otplinearlayout"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/otpedittext3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_edit"
            android:fontFamily="@font/circular_book"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@id/otplinearlayout"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/otpedittext4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_edit"
            android:fontFamily="@font/circular_book"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:nextFocusRight="@id/otplinearlayout"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/otpResendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@id/otplinearlayout"
        android:background="#00000000"
        android:clickable="false"
        android:enabled="false"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/circular_book"
        android:text="Resend OTP"
        android:textAllCaps="false"
        android:textColor="#80ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/otpresettimer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_alignBaseline="@+id/otpResendButton"
        android:layout_toRightOf="@id/otpResendButton"
        android:fontFamily="@font/circular_book"
        android:text="60 sec"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/otpResendButton"
        android:layout_marginTop="50dp">

        <!--<ImageView-->
            <!--android:id="@+id/glow"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginEnd="60dp"-->
            <!--android:layout_marginStart="60dp"-->
            <!--android:background="@drawable/glow" />-->


        <Button
            android:id="@+id/otpsumbitbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="72dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginStart="72dp"
            android:alpha="0.5"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_ripple_red"
            android:fontFamily="@font/circular_medium"
            android:padding="12dp"
            android:text="Continue"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>


</RelativeLayout>
