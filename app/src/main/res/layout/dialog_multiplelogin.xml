<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@drawable/card_backgorund"
    android:backgroundTint="@android:color/white"
    android:layout_marginBottom="20dp"
    android:textAlignment="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="You've already joined."
        android:id="@+id/text"
        android:textColor="#0f0520"
        android:textAlignment="center"
        android:fontFamily="@font/circular_medium"
        android:textSize="25sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/circular_book"
        android:textColor="#BF0F0520"
        android:lineSpacingExtra="1.2dp"
        android:layout_below="@id/text"
        android:layout_marginBottom="40dp"
        android:text="Sorry, you can not play the game as you have joined the game from some other device."
        android:textAlignment="center"
        android:textSize="18sp" />


</RelativeLayout>