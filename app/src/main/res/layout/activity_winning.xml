<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="learnacad.learnacad.com.InfoActivies.WinningActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background"

        tools:context="learnacad.learnacad.com.InfoActivies.WinningActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/stars" />

        <ImageView
            android:layout_width="233dp"
            android:layout_height="276dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/ovalquizin1" />


        <ImageView
            android:layout_width="123dp"
            android:layout_height="186dp"
            android:background="@drawable/ovalquiz12" />

        <ImageView
            android:layout_width="143dp"
            android:layout_height="206dp"
            android:background="@drawable/ovalquiz13" />


        <ImageView
            android:layout_width="150dp"
            android:layout_height="191dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ovalquiz2" />


        <ImageView
            android:layout_width="110dp"
            android:layout_height="141dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ovalquiz22" />


        <ImageView
            android:layout_width="91dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ovalquiz23" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ovalquiz31" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ovalouiz32" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ovalquiz33" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.4"
            android:background="#1a0e49" />

        <ImageView
            android:id="@+id/otpbackbtnimageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:onClick="backbtn" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/otpbackbtnimageview"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/circular_medium"
            android:gravity="center_horizontal"
            android:text="Next Steps"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/winleaderboard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/button_ripple_blue"
            android:fontFamily="@font/circular_medium"
            android:onClick="openleaderboard"
            android:shadowColor="#4c3988ff"
            android:text="View Leaderboard"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/winreviewquiz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/winleaderboard"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/button_ripple_red"
            android:fontFamily="@font/circular_medium"
            android:onClick="reviewquiz"
            android:text="Review Quiz"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/circular_book"
            android:onClick="takehome"
            android:text="Take Me Home"
            android:textColor="#aab7d9"
            android:textSize="16sp"
            android:visibility="visible" />


    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</ScrollView>