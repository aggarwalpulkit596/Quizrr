<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileconstraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context="quizrr.quizrr.com.learnacad.learnacad.quizrr.SignUpActivites.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/stars" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="276dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/ovalquizin1" />


    <ImageView
        android:layout_width="123dp"
        android:layout_height="186dp"
        android:background="@drawable/ovalquiz12" />

    <ImageView
        android:layout_width="143dp"
        android:layout_height="206dp"
        android:background="@drawable/ovalquiz13" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="191dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz2" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="141dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz22" />


    <ImageView
        android:layout_width="91dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz23" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz31" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalouiz32" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz33" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="#1a0e49" />

    <ImageView
        android:id="@+id/otpbackbtnimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="backbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/otpbackbtnimageview"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/circular_medium"
        android:gravity="center_horizontal"
        android:text="Your Profile"
        android:textColor="#ffffff"
        android:textSize="24sp" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimage2nd"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_edit"
        android:onClick="setimage"
        android:padding="2dp"
        android:src="@drawable/avatar_upload_camera" />


    <EditText
        android:id="@+id/profilenameedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userimage2nd"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/circular_book"
        android:hint="Username (Min 4 char)"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textColor="#fff"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:textColorHint="#33ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/profilereferraledittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/profilenameedittext"
        android:layout_alignStart="@+id/profilenameedittext"
        android:layout_below="@id/profilenameedittext"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/circular_book"
        android:hint="Referral Code (Optional)"
        android:inputType="textEmailAddress"
        android:maxLength="10"
        android:textColor="#fff"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:textColorHint="#33ffffff"
        android:textSize="20sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilereferraledittext"
        android:layout_marginTop="50dp">



        <Button
            android:id="@+id/profilesumbitbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:background="@drawable/round_rect2"
            android:fontFamily="@font/circular_medium"
            android:padding="16dp"
            android:alpha="0.5"
            android:text="Letâ€™s Play"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>



</RelativeLayout>
