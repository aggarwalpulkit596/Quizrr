<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderboardrootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="quizrr.quizrr.com.learnacad.learnacad.quizrr.Activities.LeaderBoardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/stars" />

    <ImageView
        android:layout_width="233dp"
        android:layout_height="276dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/ovalquizin1" />


    <ImageView
        android:layout_width="123dp"
        android:layout_height="186dp"
        android:background="@drawable/ovalquiz12" />

    <ImageView
        android:layout_width="143dp"
        android:layout_height="206dp"
        android:background="@drawable/ovalquiz13" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="191dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz2" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="141dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz22" />


    <ImageView
        android:layout_width="91dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ovalquiz23" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz31" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalouiz32" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ovalquiz33" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="#1a0e49" />

    <ImageView
        android:id="@+id/otpbackbtnimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="backbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/otpbackbtnimageview"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/circular_medium"
        android:gravity="center_horizontal"
        android:text="Leaderboard"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/topictextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Application of Derivatives"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstimage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/topictextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_edit2"
        android:padding="2dp"
        android:src="@drawable/default_avatar" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firstimage"
        android:layout_alignTop="@+id/firstimage"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:src="@drawable/top_3_first_circle" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/secondimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/firstimage"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/firstimage"
        android:background="@drawable/circle_edit2"
        android:padding="2dp"
        android:src="@drawable/default_avatar" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/secondimage"
        android:layout_alignTop="@+id/secondimage"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:src="@drawable/top_3_second_circle" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thirdimage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@id/firstimage"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/firstimage"
        android:background="@drawable/circle_edit2"
        android:padding="2dp"
        android:src="@drawable/default_avatar" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/thirdimage"
        android:layout_alignTop="@+id/thirdimage"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:src="@drawable/top_3_third_circle" />

    <TextView
        android:id="@+id/secondtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/secondimage"
        android:layout_alignStart="@id/secondimage"
        android:layout_below="@id/secondimage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/circular_book"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/firstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/firstimage"
        android:layout_alignStart="@id/firstimage"
        android:layout_below="@id/firstimage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/circular_book"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/thirdtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/thirdimage"
        android:layout_alignStart="@id/thirdimage"
        android:layout_below="@id/thirdimage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/circular_book"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tasklayout"
        android:layout_below="@id/firstext"
        android:layout_marginTop="42dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tasklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:background="#0f002d"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="606dp">

        <TextView
            android:id="@+id/positiontextvieww"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:fontFamily="@font/circular_book"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nametextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/circular_book"
            android:textColor="#ffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timetextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:fontFamily="@font/circular_book"
            android:textColor="#ffff"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>
