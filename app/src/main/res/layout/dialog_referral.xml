<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/circular_medium"
        android:text="No Referral Code?"
        android:textAlignment="center"
        android:textColor="#0f0520"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:lineSpacingMultiplier="1.2"
        android:fontFamily="@font/circular_book"
        android:text="Youâ€™re missing out on a free lifeline."
        android:textAlignment="center"
        android:textColor="#bf0f0520"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:lineSpacingMultiplier="1.2"
        android:fontFamily="@font/circular_book"
        android:text="Ask your friends if they have got a referral code."
        android:textAlignment="center"
        android:textColor="#bf0f0520"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_rect2"
        android:fontFamily="@font/circular_medium"
        android:padding="16dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="Ask Friends"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:fontFamily="@font/circular_book"
        android:padding="0dp"
        android:text="Continue without code"
        android:textAlignment="center"
        android:textColor="#bf0f0520"
        android:textSize="16sp" />


</LinearLayout>